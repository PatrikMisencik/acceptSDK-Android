<?xml version="1.0" encoding="utf-8"?>
<manifest package="de.wirecard.accept.sample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/manifest_app_name"
        android:screenOrientation="portrait">
        <activity
            android:name=".LoginActivity"
            android:configChanges="screenSize|screenLayout"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PaymentFlowActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TransactionsHistoryActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WrongAcceptSettingsActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait" />
        <service
            android:name="de.wirecard.accept.extension.thyron.hardware.usb.UsbService"
            android:enabled="true" >
        </service>
    </application>

</manifest>
